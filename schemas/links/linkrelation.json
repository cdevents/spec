{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cdevents.dev/0.6.0-draft/schema/links/linkrelation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "chainId": {
      "description": "Represents the lifecycle grouping of a series of related events.",
      "type": "string",
      "minLength": 1
    },
    "linkType": {
      "type": "string",
      "enum": ["RELATION"]
    },
    "linkKind": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "description": "Identifies the source of the relation. May reference a CDEvent context ID, a domain execution ID, or both.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "contextId": {
          "type": "string",
          "minLength": 1
        },
        "domainId": {
          "type": "string",
          "minLength": 1
        }
      },
      "anyOf": [
        { "required": ["contextId"] },
        { "required": ["domainId"] }
      ]
    },
    "target": {
      "description": "Identifies the target of the relation. May reference a CDEvent context ID, a domain execution ID, or both.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "contextId": {
          "type": "string",
          "minLength": 1
        },
        "domainId": {
          "type": "string",
          "minLength": 1
        }
      },
      "anyOf": [
        { "required": ["contextId"] },
        { "required": ["domainId"] }
      ]
    },
    "tags": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "linkType",
    "timestamp",
    "source",
    "target"
  ]
}

